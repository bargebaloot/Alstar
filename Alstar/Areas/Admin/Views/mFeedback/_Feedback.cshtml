@model Alstar.Models.mFeedback
@{
    Alstar.Models.database.AlstarDb AlstarDb = new Alstar.Models.database.AlstarDb();
}
<div class="page-content-wrapper ">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="row align-items-center">
                        <h4>
                            ویرایش نظرات
                        </h4>
                    </div>
                    <!-- end row -->
                </div>
                <!-- end page-title-box -->
            </div>
        </div>
        <!-- Content Header (Page header) -->
        @using (Html.BeginForm("FeedbackPost", "mFeedback", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "form-horizontal" }))
        {
            if (ViewBag.error != null)
            {
                <div class="col-md-8 form-group" style="margin-top:30px;margin-right:3px;">
                    <div class="alert alert-dismissable alert-danger">
                        @ViewBag.error
                    </div>
                </div>
            }
 <!-- Main content -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="card m-b-30">
                        <div class="card-body">

                            <form class="" action="#">
                                <div class="box-body">
                                    @Html.TextBoxFor(model => model.cust_feedback_id, new { @type = "hidden" })
                                    <div class="form-group">
                                        <input type="hidden" name="cust_feedback_img" id="cust_feedback_img" value="@Model.cust_feedback_img" />
                                        <label class="col-sm-3 control-label" for="img_file">تصویر(1279*1920):</label>
                                        <div class="col-sm-3">
                                            <img src="~/images/feedback/@Model.cust_feedback_img" width="70" height="70" />
                                        </div>
                                        <div class="col-sm-6">
                                            <input type="file" name="img_file" id="" value="@Model.cust_feedback_img" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label" for="cust_feedback_title">اسم : </label>
                                        <div class="col-sm-9">
                                            @Html.TextBoxFor(model => model.cust_feedback_title, new { @placeholder = "اسم", @class = "form-control force" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label" for="cust_company_title">سمت : </label>
                                        <div class="col-sm-9">
                                            @Html.TextBoxFor(model => model.cust_company_title, new { @placeholder = "سمت", @class = "form-control force" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label" for="cust_feedback_exp">توضیحات : </label>
                                        <div class="col-sm-9">
                                            @Html.TextAreaFor(model => model.cust_feedback_exp, new { @placeholder = "توضیحات", @class = "form-control force" })
                                        </div>
                                    </div>
                                </div>
                                <!-- /.box-body -->
                                <div class="box-footer">
                                    <button type="submit" class="btn btn-info pull-right sub_validation">ثبت</button>
                                </div>
                                <!-- /.box-footer -->
                            </form>
                        </div>
                        <!-- /.box -->
                    </div>
                    <!--/.col (right) -->
                </div>
                <!-- /.row -->
            </div>
        <!-- /.content -->
        }

    </div>
</div>



